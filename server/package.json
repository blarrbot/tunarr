{
  "name": "server",
  "version": "1.0.0",
  "description": "Create LiveTV channels from your Plex media",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "test": "vitest",
    "package": "sh ./make_dist.sh",
    "build": "tsc -p tsconfig.json",
    "dev": "nodemon -e ts --watch . --watch index.ts --ignore build/ -e .json,.ts,.yml,.yaml,.js -x ts-node-esm -r tsconfig-paths/register --files --project tsconfig.json index.ts",
    "buildw": "nodemon -e ts --watch . --watch index.ts --ignore build/ -e .json,.ts,.yml,.yaml,.js -x tsc --project tsconfig.json"
  },
  "type": "module",
  "main": "index.ts",
  "author": "chrisbenincasa",
  "license": "Zlib",
  "dependencies": {
    "@types/cors": "^2.8.15",
    "JSONStream": "1.0.5",
    "axios": "^1.6.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-fileupload": "^1.2.1",
    "fluent-ffmpeg": "^2.1.2",
    "lodash-es": "^4.17.21",
    "lowdb": "^6.1.1",
    "morgan": "^1.10.0",
    "node-graceful-shutdown": "1.1.0",
    "node-schedule": "^2.1.1",
    "node-ssdp": "^4.0.0",
    "random-js": "2.1.0",
    "tslib": "^2.6.2",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "xml-writer": "^1.7.0",
    "yargs": "^17.7.2",
    "zod": "^3.22.4"
  },
  "bin": "dist/index.js",
