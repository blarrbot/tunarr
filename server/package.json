    "@types/express-fileupload": "^1.4.3",
    "@types/fluent-ffmpeg": "^2.1.23",
    "@types/lodash": "^4.14.200",
    "@types/lodash-es": "^4.17.10",
    "@types/morgan": "^1.9.7",
    "@types/node": "^20.8.9",
    "@types/uuid": "^9.0.6",
    "@types/yargs": "^17.0.29",
    "copyfiles": "^2.2.0",
    "del-cli": "^3.0.0",
    "nexe": "^4.0.0-rc.2",
    "nodemon": "^3.0.1",
